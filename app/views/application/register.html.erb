<% if params[:error] %>
  <h1> 
    Ensure a valid email must be used
  </h1>
  <p> 
    If the email is already registered, try to <%= link_to 'Sign In', auth.sign_in_path(passwordless: {email: params[:email]}) %> 
  </p>
<% end %>

<%= form_with model: @user do |form| %>
  <%= form.label :email %>
  <%= form.text_field :email, value: params[:email] %>

  <%= form.submit 'Register' %>
<% end %>